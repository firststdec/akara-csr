block variables

doctype html
html(lang='ja')
  head
    meta(charset='utf-8')
    meta(name='viewport', content=(meta && meta.viewport ? meta.viewport : 'width=device-width,initial-scale=1.0,minimum-scale=1.0,user-scalable=no'))
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='format-detection' content='telephone=no')

    title= (meta && meta.title ? meta.title : '')
    meta(name='keyword', content=(meta && meta.keyword ? meta.keyword : ''))
    meta(name='description', content=(meta && meta.description ? meta.description : ''))

  body
    //- mixin
    include ../components/mixin/_some-mixin

    //- Hero
    include ../components/_hero

    //- block content
    block content

    //- Footer
    include ../components/_footer

    //- JS
    block scripts
    //-  script(src='')